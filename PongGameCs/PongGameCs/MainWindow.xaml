<Window x:Class="PongGameCs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PongGameCs"
        mc:Ignorable="d"
        Title="Ping-Pong" Height="500" Width="450" ResizeMode="NoResize">
    <Canvas Width="450" Height="500" Name="MainCanvas" Background="Black">
        
        <Rectangle x:Name="paddle" Width="200" Height="20" Stroke="Black" VerticalAlignment="Top" Fill="#FF0879D4"
                    Canvas.Left="{Binding paddle_x}"  Canvas.Top="420" />

        <Ellipse x:Name="ball" Height="20" Width="20" Margin="190,123,-86,0" Stroke="White" VerticalAlignment="Top" Fill="White"
                 Canvas.Left="{Binding ball_x}" Canvas.Top="{Binding ball_y}"/>
        <Button Content="Button" Canvas.Left="280" Canvas.Top="250"/>

    </Canvas>
</Window>
